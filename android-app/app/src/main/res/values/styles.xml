<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- trong res/values/styles.xml -->
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">1dp</item>
        <!-- Ngăn không cho icon bị tô màu lại -->
        <item name="startIconTint">@null</item>
        <item name="boxStrokeColor">@color/login_text_input_box_stroke</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Remove the underline -->
        <item name="android:background">@drawable/search_bar_background</item> <!-- Ensure your custom background is applied -->
        <item name="queryBackground">@null</item> <!-- Might also help in some cases -->
        <item name="submitBackground">@null</item> <!-- Might also help in some cases -->
    </style>
</resources>